<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="20dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_view_background"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp"
        >

        <TextView
            android:id="@+id/tvShortForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="short form"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic"
          />

        <TextView
            android:id="@+id/tvStandFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="2dp"
            android:text="stand for"
            android:fontFamily="@font/courgette"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@id/tvLongForm"

            />


        <TextView
            android:id="@+id/tvLongForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="2dp"
            android:text="Long form"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="@+id/tvStandFor"
            app:layout_constraintEnd_toEndOf="parent"

        />


    </LinearLayout>


</androidx.cardview.widget.CardView>